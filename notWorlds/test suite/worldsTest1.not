    var
        a = unit,
        b = unit,
        c = unit,
        d = unit
    in
        a = thisWorld;
        b = a.sprout();

        within b {
            c = thisWorld.sprout();  << thisWorld refers to b here >>
            within c {
                d = 7
            };
            c.commit()
        };

        b.commit();
        output d;   << prints 7 >>

        d = 23;
        b.update();

        within b {
            output d    << prints 23 >>
        }
