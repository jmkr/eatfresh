var
    a = unit,
	b = unit,
	c = 2
in
a := thisWorld;
b := a.sprout();
within b {
	c := 4;
	output a; << prints out world a >>
	output b; << prints out world b >>
	output c  << prints out 4 >>
};
output c;     << print out 2 >>
b.commit();
output a;  	  << prints out world a >>
output b;     << prints out world b >> 
output c      << prints out 4 >>